<%= render "shared/header" %>

<h1>プロフィールを編集</h1>

<%= form_with model: @introduction, local: true do |f| %>
  <div class="form-group">
    <%= f.label :birth_day, "誕生日" %>
    <%= f.date_field :birth_day, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :blood_type, "血液型" %>
    <%= f.select :blood_type, options_for_select(['A', 'B', 'O', 'AB'], @introduction.blood_type), { include_blank: '選択してください' }, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :body_height, "身長 (cm)" %>
    <%= f.number_field :body_height, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :body_weight, "体重 (kg)" %>
    <%= f.number_field :body_weight, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :favorite_food, "好きな食べ物" %>
    <%= f.text_field :favorite_food, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :dislike_food, "苦手な食べ物" %>
    <%= f.text_field :dislike_food, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :favorite_color, "好きな色" %>
    <%= f.text_field :favorite_color, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :favorite_place, "好きな場所" %>
    <%= f.text_field :favorite_place, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "shared/footer" %>