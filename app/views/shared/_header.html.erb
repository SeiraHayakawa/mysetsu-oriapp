<header class="header">
  <div class="headers">
    <% if user_signed_in? %>
      <a class="logo_space" href="<%= torisetsus_path %>">
        <%= image_tag 'logo.png', alt: 'App Logo', class: 'app-logo' %>
      </a>
    <% else %>
      <a class="logo_space" href="<%= root_path %>">
        <%= image_tag 'logo.png', alt: 'App Logo', class: 'app-logo' %>
    <% end %>
    <div class="right_header">
      <% if user_signed_in? %>
        <ul class="nav">
          <li class="nav-item"><%= link_to 'プレビュー', "#", class: "header_button nav-link" %></li>
          <li class="nav-item"><%= link_to '共有', "#", class: "header_button nav-link" %></li>
          <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "header_button nav-link" %></li>
          <li class="nav-item"><%= link_to current_user.nickname, "#", class: "header_button nav-link" %></li>
        </ul>
      <% else %>
        <ul class="nav">
          <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: "header_button nav-link" %></li>
          <li class="nav-item"><%= link_to '新規登録', new_user_registration_path, class: "header_button nav-link" %></li>
        </ul>
      <% end %>
    </div>
  </div>
</header>